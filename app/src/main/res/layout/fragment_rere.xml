<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF6F9">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/dimens_22"
            android:paddingVertical="@dimen/dimens_18"
            android:text="reRE : 콘텐츠 재평가 플랫폼"
            android:textColor="#303030"
            android:textSize="16dp"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/sub_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimens_22"
            android:layout_marginTop="@dimen/dimens_12"
            android:text="“ 그거 지금 다시 봐도 재밌을까? ”"
            android:textColor="#B95576"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/title" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/sub_02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimens_24"
            android:layout_marginTop="@dimen/dimens_12"
            android:text="그 때는 천만 영화,
비싼 가격에 한번 밖에 보지 못한 뮤지컬,
도토리로 들었던 음악까지"
            android:textColor="#B95576"
            android:textSize="14dp"
            app:layout_constraintTop_toBottomOf="@id/sub_01" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_40"
            android:src="@drawable/ic_img_rere_main"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sub_02" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_40"
            android:paddingHorizontal="@dimen/dimens_24"
            android:text="지금 다시 보고 들어보면 어떨지
reRE에서 확인해보세요."
            android:textColor="#303030"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/background" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>